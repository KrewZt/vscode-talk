{
  "name": "vscode-talk",
  "displayName": "vscode-talk",
  "description": "A simple screenplay editor inside VSCode",
  "version": "0.0.2",
  "publisher": "KrewZh",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KrewZt/vscode-talk"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vst",
        "aliases": [
          "VSCode Talk",
          "vst"
        ],
        "extensions": [
          ".vst"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "vst.showCharacterSwitcher",
        "title": "VST: Switch Character (for current line)"
      }
    ],
    "keybindings": [
      {
        "command": "vst.showCharacterSwitcher",
        "key": "ctrl+k",
        "when": "activeCustomEditorId == 'vscode-talk.vstEditor'"
      }
    ],
    "customEditors": [
      {
        "viewType": "vscode-talk.vstEditor",
        "displayName": "VSTalk Editor",
        "selector": [
          {
            "filenamePattern": "*.vst"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
